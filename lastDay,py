    <script>
        let dataTable = document.getElementById('data-table').getElementsByTagName('tbody')[0];
        let deleteButton = document.getElementById('delete-button');

        function loadBlocks() {
            let plant = document.getElementById('plant-dropdown').value;
            if (plant) {
                fetch(`/load_data?plant=${plant}`)
                    .then(response => response.json())
                    .then(data => {
                        let blockDropdown = document.getElementById('block-dropdown');
                        blockDropdown.innerHTML = '<option value="">Select Block</option>';
                        data.blocks.forEach(block => {
                            let option = document.createElement('option');
                            option.value = block;
                            option.textContent = block;
                            blockDropdown.appendChild(option);
                        });

                        let summaryContainer = document.getElementById('summary-container');
                        document.getElementById('total-blocks').textContent = data.summary.total_blocks;
                        document.getElementById('total-dc-mwp').textContent = data.summary.total_dc_mwp;
                        document.getElementById('strCount').textContent = data.summary.strCount;
                        document.getElementById('invMake').textContent = data.summary.invMake;
                        document.getElementById('total_invModel').textContent = data.summary.total_invModel;
                        document.getElementById('total_modMake').textContent = data.summary.total_modMake;
                        document.getElementById('total_ModModel').textContent = data.summary.total_ModModel;
                        summaryContainer.style.display = 'block';
                    });
            }
        }

        function loadData() {
            let plant = document.getElementById('plant-dropdown').value;
            let block = document.getElementById('block-dropdown').value;
            if (plant && block) {
                fetch(`/load_data?plant=${plant}&block=${block}`)
                    .then(response => response.json())
                    .then(data => {
                        dataTable.innerHTML = '';
                        data.forEach(row => {
                            let newRow = dataTable.insertRow();
                            let selectCell = newRow.insertCell();
                            let selectCheckbox = document.createElement('input');
                            selectCheckbox.type = 'checkbox';
                            selectCell.appendChild(selectCheckbox);

                            let idCell = newRow.insertCell();
                            idCell.textContent = row.ID;

                            let plantCell = newRow.insertCell();
                            plantCell.textContent = row.Plant;

                            let blockCell = newRow.insertCell();
                            blockCell.textContent = row.Block;

                            let dataPoint1Cell = newRow.insertCell();
                            dataPoint1Cell.textContent = row.DataPoint1;

                            let dataPoint2Cell = newRow.insertCell();
                            dataPoint2Cell.textContent = row.DataPoint2;
                        });
                    });
            }
        }

        deleteButton.addEventListener('click', function () {
            let selectedRows = Array.from(dataTable.querySelectorAll('input[type="checkbox"]:checked')).map(checkbox => checkbox.closest('tr'));
            selectedRows.forEach(row => {
                let rowId = row.cells[1].textContent;
                fetch('/delete_data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: rowId })
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        row.remove();
                    }
                });
            });
        });

        document.getElementById('search-bar').addEventListener('input', function () {
            let filter = this.value.toLowerCase();
            let rows = dataTable.getElementsByTagName('tr');
            Array.from(rows).forEach(row => {
                let cells = row.getElementsByTagName('td');
                let match = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(filter));
                row.style.display = match ? '' : 'none';
            });
        });
    </script>
</body>
</html>
    """, plants=plants)

@app.route('/delete_data', methods=['POST'])
def delete_data():
    data = request.get_json()
    row_id = data['id']

    # Delete from BigQuery
    table_id = "agel-svc-winddata-dmz-prod.winddata." + Tablename
    query = f"DELETE FROM `{table_id}` WHERE ID = '{row_id}'"
    client.query(query)

    return jsonify({'success': True})

if __name__ == '__main__':
    app.run(debug=True)
